
<div class="container">
    <%= form_for (@book) do |f|%>
        
        <% if @book.errors.any?%>
            <div>
                <h2> <%= pluralize(@book.errors.count, "error") %> on saving the book:</h2>
                <ul>
                    <% @book.errors.full_messages.each do |msg|%>
                        <li> <%= msg %> </li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="form-group">
            <%= f.label 'Título'%>        
            <%= f.text_field :title, id: :book_title%>       
        </div>

        <div class="form-group">
            <%= f.label 'Autor'%>        
            <%= f.text_field :author, id: :book_author%>       
        </div>

        <div class="form-group">
            <%= f.label 'Estado'%>        
            <%= f.select :status, Book.statuses.keys%>       
        </div>

        <div class="form-group">
            <%= f.label 'Prestado a'%>        
            <%= f.text_field :lend_to, id: :book_lend_to%>       
        </div>

        <div class="form-group">
            <%= f.label 'Fecha del préstamo'%>        
            <%= f.datetime_select :lend_time, id: :lend_time%>       
        </div>

        <div class="form-group">
            <%= f.label 'Fecha de devolución'%>        
            <%= f.datetime_select :return_time, id: :book_return_time%>       
        </div>

        <div class="actions">

            <%= f.submit 'Crear libro'%>
        </div>
    <% end%>
</div>
<br>
<p> <%= link_to "Index", books_path%> </p>

