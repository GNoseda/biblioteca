
<h2>Libros</h2>
<%= link_to "Nuevo libro", books_new_path%>
<br> 
<div class="container">
<table class="table">
    <thead> 
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Estado actual</th>
            <th>Prestado a</th>
            <th>Fecha del prestamo</th>
            <th>Fecha de devolución</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody> 
        <% @books.each do |book|%>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.status %></td>
                <td><%= book.lend_to %></td>
                <td><%= book.lend_time %></td>
                <td><%= book.return_time %></td>
                <td><%= link_to 'Show', book %></td> <!--Investigar esto-->
                <td><%= link_to 'Edit', books_edit_path(book) %></td>
                <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'are you sure?'} %></td>
            </tr>
        <% end %>
    </tbody>
    
</table>
</div>